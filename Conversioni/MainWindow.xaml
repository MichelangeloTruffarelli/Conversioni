<Window x:Class="Conversioni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conversioni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFF04949" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="TxtNumero" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="185,225,0,0"/>
        <TextBox x:Name="TxtConvert" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Margin="485,225,0,0"/>
        <ComboBox x:Name="cmb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="340,120,0,0">
            <ComboBoxItem>Binario</ComboBoxItem>
            <ComboBoxItem>da Decimale</ComboBoxItem>
        </ComboBox>
        <Button Content="Converti" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="360,200,0,0" Height="30" Click="Button_Click"/>
    </Grid>
</Window>
